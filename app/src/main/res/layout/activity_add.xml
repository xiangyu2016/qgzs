<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_dark_red">

        <RelativeLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/buyButton"
            android:layout_width="44dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/abc_ic_go" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加商品"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="商品编码"
            android:textColor="@color/color_dark_black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/goodsID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:background="@color/color_white"
            android:hint="请填写商品编码"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:textColor="@color/color_text_dark_gary"
            android:textColorHint="@color/color_text_gary"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_light_gary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="期望价格"
            android:textColor="@color/color_dark_black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:background="@color/color_white"
            android:hint="请填写期望价格"
            android:inputType="phone"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:textColor="@color/color_text_dark_gary"
            android:textColorHint="@color/color_text_gary"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_light_gary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="检测模式"
            android:textColor="@color/color_dark_black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:background="@color/color_white"
            android:paddingEnd="12dp"
            android:paddingStart="12dp">

            <CheckBox
                android:id="@+id/miaosha"
                android:text="有秒杀活动"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:id="@+id/danjia"
                android:text="价格低于期望价格"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_light_gary" />

    <TextView
        android:id="@+id/enter"
        android:background="@drawable/enter_bg"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:text="确认添加"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>